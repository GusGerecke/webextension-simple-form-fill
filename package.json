{
    "title": "Simple Form Fill",
    "name": "simpleformfill",
    "id": "simpleformfill@sblask",
    "version": "1.0.3",
    "description": "Enter text into input fields by choosing items from the context menu. New items can be added by selecting text and choosing 'Add to Simple Form Fill' or by changing the add-ons' preferences.",
    "main": "index.js",
    "author": "Sebastian Blask",
    "engines": {
        "firefox": ">=38.0a1",
        "fennec": ">=38.0a1"
    },
    "license": "MIT",
    "scripts": {
        "lint": "eslint index.js lib data test && jscs index.js lib data test",
        "start": "jpm --binary firefox-trunk run",
        "start:stable": "jpm --binary /usr/bin/firefox run",
        "test": "jpm --binary firefox-trunk test",
        "test:stable": "jpm --binary /usr/bin/firefox test",
        "test:travis": "jpm --binary /usr/local/bin/firefox test",
        "xpi": "jpm xpi"
    },
    "devDependencies": {
        "eslint": "1.10.x",
        "jpm": "1.0.x",
        "jscs": "2.6.x"
    },
    "keywords": [
        "contextmenu",
        "fill",
        "form",
        "jetpack",
        "notes",
        "selection"
    ],
    "icon": "resource://simpleformfill-at-sblask/data/icon.svg",
    "homepage": "https://addons.mozilla.org/firefox/addon/simple-form-fill/",
    "repository": {
        "type": "git",
        "url": "https://github.com/sblask/firefox-simple-form-fill"
    },
    "permissions": {
        "multiprocess": true,
        "private-browsing": true
    },
    "preferences-branch": "simpleformfill",
    "preferences": [
        {
            "name": "items",
            "title": "Menu Items",
            "description": "Menu items separated by new line",
            "type": "string",
            "value": "",
            "hidden": true
        },
        {
            "type": "control",
            "label": "Edit",
            "name": "editButton",
            "title": "Menu Items"
        }
    ]
}
